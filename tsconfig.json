{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es2018",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "declaration": true,
        "declarationMap": true,
        "inlineSourceMap": true,
        "inlineSources": true,
        "outDir": "dist",
        "baseUrl": ".",
        "typeRoots": ["node_modules/@types"],
        "paths": {
            "*": [
                "node_modules/*",
            ]
        }
    },
    "include": [
        "src/**/*"
    ]
}
